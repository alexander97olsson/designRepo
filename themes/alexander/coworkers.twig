<!DOCTYPE html>
<html lang="sv" class="no-js">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="{{ theme_url }}/../shared/img/lawyerlogo.png">
    <title>{% if meta.title %}{{ meta.title }} | {% endif %}{{ site_title }}</title>

    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}" />
    {% endif %}
    {% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}" />
    {% endif %}

    {% if current_page %}
        <link rel="canonical" href="{{ current_page.url }}" />
    {% endif %}

    {% if config.session.theme == "dark" %}
        <link rel="stylesheet" href="{{ theme_url }}/css/style-dark.css" type="text/css" />
    {% else %}
        <link rel="stylesheet" href="{{ theme_url }}/css/style.css" type="text/css" />
    {% endif %}
    <!-- Insert font choice here -->
    {# <link rel="stylesheet" href="{{ theme_url }}/../shared//css/dorid-sans.css" type="text/css" /> #}
    <!-- End -->


</head>
<!-- "Widescreen-mode" can be activated in portfolio/config/config.yml -->
<body{% if config.theme_config.widescreen %} class="widescreen"{% endif %}>
    <header class="site-header">
        <div class="header-image-div">
            <img class"header-image" src="assets/img/lawyerlogo.png" height="80px" width="80px">
        </div>
        <a id="nav-toggle" title="Toggle Menu" role="button" aria-controls="nav" aria-expanded="false">
            <i class="fa fa-bars" aria-hidden="true" id="toggler"></i>
            <span class="sr-only">Toggle Menu</span>
        </a>
        <div id="nav" role="navigation" tabindex="-1">
            <ul class"buttonContainer">
                {% for page in pages(depthOffset=-1) if page.title and not page.hidden %}
                <li{% if page.id == current_page.id %} class="active" {% endif %}>
                    <a class="buttons" href="{{ page.url }}">{{ page.title }}</a>
                    </li>
                    {% endfor %}
            </ul>
        </div>
    </header>
    <div class="main" role="main">
    <h1 class="text-medarbetare text-color-theme">The proud team of Ludviga Af Solstråle</h1>
        <div class="gallery">
            {% for image in meta.images %}
                <div class="coworker-container">
                        <picture class="pictures">
                            <source media="(min-width: 668px)" srcset="{{ base_url }}/image/gallery/{{ image.url }}">
                            <img class="final-image" src="{{ base_url }}/image/gallery/{{ image.url }}&w=200" alt="{{image.alt}}">
                            <div class="picture-text">
                                <h1 class="picture-text-name text-color-theme">{{ image.name }}</h1>
                                <h1 class="picture-text-place">{{ image.place }}</h1><br>
                                <a class="picture-text-a">{{ image.info }}</a>
                            </div>
                        </picture>
                    </a>
                </div>
            {% endfor %}
        </div>
      
    </div>
    <div class="footer">
        <div class="container">
            <div class="social">
                <!-- Loads from FontAwesome (themes/shared/css/font-awesome.min.css) -->
                {% for social in pages["_meta"].meta.social %}
                    <div>
                        <i class="{{ social.icon }}" aria-hidden="true"></i>
                        <a class="footer-icon-text">{{ social.text }}</a>
                        <br>
                        <span class="sr-only">{{ social.title }}</span>
                    </div>
                {% endfor %}
            </div>
            <p class="footer-text">
                © 1999-2020 Ludviga Af Solstråles advokatbryå Sverige AB, Org.Nr: 123456-7891
            </p>
            <div class="footer-div-image">
                <img src="assets/img/lawyerlogo.png" class="footer-image">
            </div>
        </div>
    </div>

    <script src="{{ theme_url }}/../shared//js/modernizr-3.3.1-custom.min.js" type="text/javascript"></script>
    <script src="{{ theme_url }}/../shared//js/utils.js" type="text/javascript"></script>
    <script src="{{ theme_url }}/../shared//js/responsive-navbar.js" type="text/javascript"></script>
</body>
</html>
